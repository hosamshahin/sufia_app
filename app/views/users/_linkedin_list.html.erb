<table id="activity" class="table table-striped table-bordered table-hover">
  <caption class="sr-only">Activity of users you follow</caption>
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% google_results.first(5).each do |result| %>
    <% next if result.title.blank? or result.uri.blank? or result.content.blank? %>
      <tr>
        <td><%= result.title %></td>
        <td><%= link_to result.uri, result.uri, target: "_blank" %></td>
        <td><%= simple_format result.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
